  <div id="div_contrato" class="container mt-4">
    <div class="card border-secondary">
      <div class="card-header">Contrato de Nuevo Cliente</div>
      <div class="card-body">
        <form action="/contrato_de_cliente" method="POST" id="form_contrato" >
            <input  id="id_cli" name="id_cli" value="<%= id %>" tabindex="1">
            <input  id="id_servicio" name="id_servicio" value="<%= estado %>" tabindex="1">
          <div class="mb-3">
            <label for="fechaini" class="form-label">Fecha de Inicio</label>
            <input type="date" class="form-control" id="fechaini" name="fechaini" tabindex="1">
          </div>
          <div class="mb-3">
            <label for="fechafin" class="form-label">Fecha de Termino</label>
            <input type="date" class="form-control" id="fechafin" name="fechafin" tabindex="1">
          </div>
          <div class="mb-3">
            <label for="diapago" class="form-label">Dia de Pago Establecido </label>
            <input type="text" class="form-control" id="diapago" name="diapago" tabindex="1">
          </div>
          <div class="mb-3">
            <label for="serviciocontra" class="form-label">Servicio</label>
            <input type="text" class="form-control" id="serviciocontra" name="serviciocontra" tabindex="1">
          </div>
          <div class="mb-3">
            <label for="costoserv" class="form-label">Costo del Servicio </label>
            <input type="text" class="form-control" id="costoserv" name="costoserv" tabindex="1">
          </div>
          <div class="mb-3">
            <label for="ipcliente" class="form-label">IP del Cliente </label>
            <input type="text" class="form-control" id="ipcliente" name="ipcliente" tabindex="1">
          </div>
          <div class="mb-3">
            <label for="observac" class="form-label">Orbservaciones</label>
            <input type="text" class="form-control" id="observac" name="observac" tabindex="1">
          </div>
        
          
       
      

