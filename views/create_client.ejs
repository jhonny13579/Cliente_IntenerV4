  <div class="container mt-4">
    <div class="card border-secondary">
      <div class="card-header">Registrar Nuevo Cliente</div>
      <div class="card-body">
        <form action="/create_client" method="POST" id="form_cliente">
          <div class="mb-3">
            <label for="name" class="form-label">Nombres</label>
            <input type="text" class="form-control" id="name" name="name" tabindex="1">
          </div>
          <div class="mb-3">
            <label for="apellido" class="form-label">Apellidos</label>
            <input type="text" class="form-control" id="apellido" name="apellido" tabindex="1">
          </div>
          <div class="mb-3">
            <label for="celular" class="form-label">Telefono/Celular </label>
            <input type="text" class="form-control" id="celular" name="celular" tabindex="1">
          </div>
          <div class="mb-3">
            <label for="tipodoc" class="form-label">Tipo de Documento </label>
            <select id="tipodoc" name="tipodoc">
              <!--Arreglo Permite recorrer el perfil obtenido de la ruta GET /router.js para llenar el combox colocado usando valores de tablas diferentes -->
                  <% for(var i=0; i < tip_doc.length; i++){ %>
                    <option value="<%= tip_doc[i].id_tipo_doc %>">
                      <%= tip_doc[i].descripcion %>
                    </option>
                    <% } %>
                </select>
          </div>
          <div class="mb-3">
            <label for="numerodoc" class="form-label">N° de Documento</label>
            <input type="text" class="form-control" id="numerodoc" name="numerodoc" tabindex="1">
          </div>
          <div class="mb-3">
            <label for="direccion" class="form-label">Dirección</label>
            <input type="text" class="form-control" id="direccion" name="direccion" tabindex="1">
          </div>
          <div class="mb-3">
            <label for="referencia" class="form-label">Referencia</label>
            <input type="text" class="form-control" id="referencia" name="referencia" tabindex="1">
          </div>

          <div class="mb-3">
            <label for="sector" class="form-label">Sector</label>
            <input type="text" class="form-control" id="sector" name="sector" tabindex="1">
     
          </div>
          <div class="mb-3">
            <label for="estado" class="form-label">Estado del Cliente</label>
           
            <select id="estado" name="estado">
             
              <% for(var i=0; i < estado.length; i++){ %>
                <option value="<%= estado[i].id_estado %>">
                  <%= estado[i].nombre %>
                </option>
                <% } %>
            </select>
          </div>
      

          <!--       <div class="mb-3">
